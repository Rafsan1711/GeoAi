# GeoAI Backend Environment Variables

# Server Configuration
PORT=8000
DEBUG=False
LOG_LEVEL=INFO

# Python Version (for Render.com)
PYTHON_VERSION=3.11.0

# Flask Configuration
FLASK_ENV=production
FLASK_APP=app.py

# CORS (if needed)
CORS_ORIGINS=*

# Session Configuration
SECRET_KEY=your-secret-key-here-change-this

# Optional: Database (for future)
# DATABASE_URL=postgresql://...

# Optional: Redis (for caching in future)
# REDIS_URL=redis://...

# Analytics (if enabled)
ANALYTICS_ENABLED=False

# Feature Flags
USE_BAYESIAN_NETWORK=True
USE_FEATURE_IMPORTANCE=True
USE_ADAPTIVE_STRATEGY=True
